{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "components/jquery": "^3.2",
        "doctrine/dbal": "^2.5",
        "intervention/image": "^2.4",
        "ixudra/curl": "6.*",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "~5.0",
        "php-curl-class/php-curl-class": "^7.2",
        "predis/predis": "^1.1",
        "thomaspark/bootswatch": "^3.3",
        "twitter/bootstrap": "^3.3"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database",
            "app/Http/Controllers"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",

            "mkdir -p public/bootstrap",
            "cp -R vendor/twitter/bootstrap/dist public/bootstrap",
            "cp -R vendor/components/jquery public/jquery",

            "mkdir -p public/themes/bootswatch",
            "cp -R vendor/thomaspark/bootswatch public/themes/"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",

            "mkdir -p public/bootstrap",
            "cp -R vendor/twitter/bootstrap/dist public/bootstrap",
            "cp -R vendor/components/jquery public/jquery",

            "mkdir -p public/themes/bootswatch",
            "cp -R vendor/thomaspark/bootswatch public/themes/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
